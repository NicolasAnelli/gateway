{
  "compilerOptions": {
    "target": "ES2017", 
    "module": "commonjs",                     
    "lib": ["ES6"],                             
    "allowJs": true,                          
    "outDir": "./dist",                       
    "rootDir": "./src",
    "removeComments": true,   
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                                        
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
    }
  },
  "include": [
    "./src/**/*", 
  ]
}
